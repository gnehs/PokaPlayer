doctype html
html
    head
        title PokaPlayer
        meta(name='viewport', content='width=device-width, initial-scale=1.0')       
        link(href='//cdnjs.cloudflare.com/ajax/libs/mdui/0.4.1/css/mdui.min.css',rel='stylesheet')
        link(href='//fonts.googleapis.com/css?family=Product+Sans',rel='stylesheet')
        link(href='/css/style.css?'+version,rel='stylesheet')
        script(src='//cdnjs.cloudflare.com/ajax/libs/mdui/0.4.1/js/mdui.min.js')
        //-app
        meta(name="theme-color" content="#3f51b5")
        link(rel="icon" href="/img/PokaPlayer.png")
        //-Add to home screen for Safari on iOS
        meta(name="apple-mobile-web-app-capable" content="yes")
        meta(name="apple-mobile-web-app-status-bar-style" content="black")
        meta(name="apple-mobile-web-app-title" content="PokaPlayer")
        link(rel="apple-touch-icon" href="/img/PokaPlayeriOS.png")
        //-Windows
        meta(name="msapplication-TileImage" content="/img/PokaPlayer.png")
        meta(name="msapplication-TileColor" content="#3f51b5")

    body.mdui-drawer-body-left
        header.mdui-appbar.mdui-appbar-fixed
            .mdui-toolbar.mdui-color-theme
                a.mdui-btn.mdui-btn-icon(mdui-drawer="{target: '#drawer', swipe: true}")
                    i.mdui-icon.material-icons menu 
                .mdui-typo-title PokaPlayer
                .mdui-toolbar-spacer
        #drawer.mdui-drawer.mdui-appbar-with-toolbar
            .mdui-list
                mixin link(name,link,icon)
                    a.mdui-list-item.mdui-ripple(href=link,data-navigo)&attributes(attributes)
                        i.mdui-list-item-icon.mdui-icon.material-icons=icon
                        .mdui-list-item-content=name
                +link("首頁","home","home")
                +link("現正播放","now","play_circle_filled")
                +link("歌詞","lrc","subtitles")
                .mdui-subheader 音樂庫
                +link("搜尋","search","search")
                +link("專輯","album","album")
                +link("資料夾","folder","folder")
                +link("演出者","artist","mic")
                +link("作曲者","composer","music_note")
                .mdui-subheader 播放清單
                +link("所有清單","playlist","playlist_play")
                +link("隨機播放","random","shuffle")
                .mdui-subheader 其他
                +link("設定","settings","settings")
                //-.mdui-subheader 帳號
                //-+link("登出","logout","account_circle")(href='/logout/')
        #header-wrapper
            .bg2
            .bg
            .title.mdui-container
                .title
                .subtitle
        #content.mdui-container
        #aplayer
        #player
            .mdui-ripple
                img(src="/img/PokaPlayer.png")
            .song-info.mdui-ripple
                .name PokaPlayer
                .artist 點擊播放鍵開始隨機播放
            .right
                .timer
                .ctrl
                    button.mdui-btn.mdui-btn-icon.mdui-ripple(onclick='ap.skipBack()')
                        i.mdui-icon.material-icons skip_previous
                    button.mdui-btn.mdui-btn-icon.mdui-ripple.mdui-color-theme-accent.play(onclick='ap.toggle()')
                        i.mdui-icon.material-icons play_arrow
                    button.mdui-btn.mdui-btn-icon.mdui-ripple(onclick='ap.skipForward()')
                        i.mdui-icon.material-icons skip_next
        script(src='//cdnjs.cloudflare.com/ajax/libs/aplayer/1.10.1/APlayer.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/showdown/1.8.6/showdown.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/keyboardjs/2.4.1/keyboard.min.js')
        script(src='/socket.io/socket.io.js')
        script(src='/js/navigo.min.js')
        script(src='/js/lyrics.min.js')
        script(src='/js/base64.js')
        script(src='/js/template.js?'+version)
        script(src='/js/api.js?'+version)
        script(src='/js/setting.js?'+version)
        script(src='/js/script.js?'+version)
        script(src='/js/color-theme.js?'+version)